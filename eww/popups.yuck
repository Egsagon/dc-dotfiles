(defwidget resizeLabel []
   (box
      :class "resizer"
      (label :text "⇋  Resizing")
   )
)

(defwindow resizer
   :monitor 0
   :geometry (geometry
      :x "-20px" :y "-20px"
      :width "100px" :height "40px"
      :anchor "right bottom")
   :wm-ignore true
   :stacking "fg"
   (resizeLabel)
)

