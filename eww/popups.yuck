; === Shutdown popup === ;

(defwidget shutContent []
   (box
     :orientation "vertical"
     :class "popup ppshut"
 
     (label :text "Are you sure you want to shut down?")
 
     (box
       :orientation "horizontal"
 
         (button :onclick "eww close shut" "No")
         (button :onclick "eww close shut && shutdown now" "Yes, stfu") ; like literaly
      )
   )
)

(defwindow shut
   :monitor 0
   :geometry (geometry
      :x "109px" :y "-110px"
      :width "300px" :height "60px"
      :anchor "left bottom")
   :wm-ignore true
   :focusable true
   (shutContent)
)

; === Restart popup === ;

(defwidget restContent []
   (box
     :orientation "vertical"
     :class "popup pprest"
 
      (label :text "Are you sure you want to restart?")
 
     (box
       :orientation "horizontal"
 
         (button :onclick "eww close rest" "No")
         (button :onclick "eww close rest && reboot" "Yes")
      )
   )
)

(defwindow rest
   :monitor 0
   :geometry (geometry
      :x "109px" :y "-60px"
      :width "300px" :height "60px"
      :anchor "left bottom")
   :wm-ignore true
   :focusable true
   (restContent)
)

